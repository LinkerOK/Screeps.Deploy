<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <StartupObject>Screeps.Deploy.Program</StartupObject>
    <Authors>Link</Authors>
    <Version>0.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Screeps deploy implementation on C#</Description>
    <Copyright>Copyright 2021 DevLink</Copyright>
    <PackageProjectUrl>https://github.com/LinkerOK/Screeps.Deploy</PackageProjectUrl>
    <RepositoryUrl>https://github.com/LinkerOK/Screeps.Deploy</RepositoryUrl>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageIconUrl />
    <PackageTags>Screeps Deploy Runtime Application Game CSharp Link DevLink</PackageTags>
    <PackageReleaseNotes>First version</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Screeps.Network" Version="0.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
